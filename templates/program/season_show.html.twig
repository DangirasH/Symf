{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.title }} - {{ season.number }}{% endblock %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.synopsis }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
            <h2>Episodes de la saison {{ season.number }}</h2>
            <ul>
                {% for episode in episodes %}
                    <li>{{ episode.number }} - {{ episode.title }} ({{ episode.synopsis }})</li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <a href="{{ path("program_show", { id: program.id }) }}">
        Retour à la liste des saisons de {{ program.title }}
    </a>
{% endblock %}