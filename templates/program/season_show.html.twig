{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.title }} - {{ season.number }}{% endblock %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.synopsis }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
            <h2>Episodes de la saison {{ season.number }}</h2>
            <ul>
                {% for episode in episodes %}
                    <li>
							{{ episode.number }}
							-
							{{ episode.title }}
						</li>
						<a href="{{ path('program_episode_show', {'program': program.slug, 'seasonId': season.id, 'episode': episode.slug}) }}">Voir</a>
					{% endfor %}
				</ul>
			</div>
			<a href="{{ path('program_show', {'slug': program.slug}) }}">Retour à la liste des saisons</a>
		</div>
	</main>
{% endblock %}

