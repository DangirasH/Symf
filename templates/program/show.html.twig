{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.synopsis }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
            <ul>
                {% for actor in program.actors %}
                    <li>
                        <a href="{{ path('actor_show', { id: actor.id }) }}">{{ actor.name }}</a>
                    </li>
            {% else %}
                <li>{{ 'No actor for this series'|trans }}</li>
            {% endfor %}
            </ul>
            <ul>
            {% for season in seasons %}
                <li><a href="{{ path("program_season_show", { programId: program.id, seasonId: season.id }) }}">Saison: {{ season.number }} - année: {{ season.year }}</a></li>
            {% endfor %}
            </ul>
        </div>
    </div>

    <a href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>
{% endblock %}